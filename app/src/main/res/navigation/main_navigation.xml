<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main_navigation"
        app:startDestination="@id/mainFragment">
    <fragment
            android:id="@+id/wcEditorFragment"
            android:name="com.zexfer.lufram.WCEditorFragment"
            android:label="Edit Collection"
            tools:layout="@layout/fragment_wc_editor" />
    <fragment
            android:id="@+id/mainFragment"
            android:name="com.zexfer.lufram.MainFragment"
            android:label="Lufram"
            tools:layout="@layout/fragment_main">
        <action
                android:id="@+id/action_mainFragment_to_WCEditorFragment"
                app:destination="@id/wcEditorFragment" />
        <action
                android:id="@+id/action_mainFragment_to_supportDevelopmentFragment"
                app:destination="@id/supportDevelopmentFragment" />
        <action
                android:id="@+id/action_mainFragment_to_aboutFragment"
                app:destination="@id/aboutFragment" />
    </fragment>
    <fragment
            android:id="@+id/supportDevelopmentFragment"
            android:name="com.zexfer.lufram.SupportDevelopmentFragment"
            android:label="Support Development"
            tools:layout="@layout/fragment_support_development" />
    <fragment
            android:id="@+id/aboutFragment"
            android:name="com.zexfer.lufram.AboutFragment"
            android:label="Learn More"
            tools:layout="@layout/fragment_about">
        <action
                android:id="@+id/action_aboutFragment_to_supportDevelopmentFragment"
                app:destination="@id/supportDevelopmentFragment" />
    </fragment>
</navigation>